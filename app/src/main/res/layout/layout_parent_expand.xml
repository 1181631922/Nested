<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:padding="10dp">


    <CheckBox
        android:id="@+id/check_parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/iv_expand_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/check_parent"
        android:background="@mipmap/ic_launcher"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_expand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_expand_icon"
        android:gravity="center_vertical"
        android:text="某某某旗舰店"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_expand_get"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_expand_name"
            android:gravity="center_vertical"
            android:text="领券"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_upright_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tv_expand_get"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_expand_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_upright_line"
            android:gravity="center_vertical"
            android:text="编辑"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black" />
    </LinearLayout>
</RelativeLayout>
